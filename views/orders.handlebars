{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}
<div class="container">
  <div class="row">
    <!-- Order Placed -->
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading" id="lefthead"><strong>Order Placed</strong></div>
        <div class="panel-body">
          <ul>
            {{#each meals}}

            {{#unless onTheway}}
            <span class="orderInfo"><strong> customer name: {{customer_name}} - customer address: {{customer_address}} -
                customer order: {{customer_order}} - customer total: {{customer_total}} </strong></span>
            <button type="button" class="deliverorder btn btn-secondary fas fa-utensils" id="deliverbutton"
              data-id="{{id}}" data-newonTheway="{{onTheway}}"></button>
            <hr>
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
    <!-- Order Delivered -->
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading rounded-0" id="righthead"><strong>Order Delivered</strong></div>
        <div class="panel-body">
          <ul>
            {{#each meals}}

            {{#if onTheway}}
            <span class="deliveredInfo"><strong> customer name: {{customer_name}} - customer address:
                {{customer_address}} - customer order: {{customer_order}} - customer total: {{customer_total}}
              </strong></span>
            <button type="button" class="deliveredOrder btn btn-dark fas fa-truck" id="trashbutton"
              data-id="{{this.id}}" data-newonTheway=""="{{onTheway}}"></button>
            <hr>
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div><!-- /row -->

